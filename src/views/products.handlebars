<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Listado de productos</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 p-6">
    <h1 class="text-4xl font-bold mb-6 text-center">Products List</h1>
    <header class="flex justify-between items-center mb-4">
        <h2 class="text-2xl font-semibold">Welcome, {{user.first_name}} {{user.last_name}}</h2>
        <a href="/logout" class="text-red-500 hover:underline">Logout</a>
    </header>

    <ul id="product-list" class="space-y-4">
        {{#each products}}
        <li class="bg-white shadow-md rounded-lg p-4 flex justify-between items-center">
            <div>
                <strong>Title:</strong> {{this.title}} <br>
                <strong>Price:</strong> ${{this.price}} <br>
                <strong>Category:</strong> {{this.category}} <br>
                <strong>Status:</strong> {{this.status}}
            </div>
            <button onclick="addToCart('{{this._id}}')" class="mt-2 bg-blue-600 text-white py-1 px-3 rounded-md hover:bg-blue-700 transition-colors">
                Add to Cart
            </button>
        </li>
        {{/each}}
    </ul>

    <!-- PaginaciÃ³n -->
    <div id="pagination" class="mt-6 flex justify-between items-center">
        {{#if prevLink}}
        <a href="{{prevLink}}" class="text-blue-500 hover:underline">Previous</a>
        {{/if}}
        <span class="text-gray-700">Page {{page}} of {{totalPages}}</span>
        {{#if nextLink}}
        <a href="{{nextLink}}" class="text-blue-500 hover:underline">Next</a>
        {{/if}}
    </div>

   
    <div class="mt-4">
        <a href="/carts" class="text-blue-600 hover:underline">Go to Cart</a>
    </div>

    <script>
        function addToCart(productId) {
            fetch('/api/carts/add-product', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ productId }),
            })
            .then(response => response.json())
            .then(data => {
                if (data.message) {
                    alert('Product added to cart');
                } else {
                    alert('Error adding product to cart');
                }
            })
            .catch(error => {
                console.error('Error:', error);
            });
        }
   </script>
  

</body>
</html>

